<Window x:Class="FaceMosaic.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:FaceMosaic.Controls"
        mc:Ignorable="d"
        SnapsToDevicePixels="True"
        Title="FaceMosaic" Height="400" Width="400" Background="{x:Null}" ResizeMode="NoResize">
	<Grid>
		<Image x:Name="Image" Stretch="Fill" x:FieldModifier="public"/>
		<controls:PlottingOverlay x:Name="Overlay" Margin="0 0 0 0" />

	</Grid>
</Window>